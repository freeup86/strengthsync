# =============================================================================
# StrengthSync Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# =============================================================================
# Database (Required)
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/strengthsync

# =============================================================================
# NextAuth.js (Required)
# =============================================================================
# Application URL (no trailing slash)
NEXTAUTH_URL=http://localhost:3000

# Secret for encrypting sessions and tokens
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl

# =============================================================================
# AWS S3 (Optional - for file uploads)
# =============================================================================
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=strengthsync-uploads

# =============================================================================
# Redis (Optional - for caching)
# =============================================================================
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Email (Optional - for notifications)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@strengthsync.com
